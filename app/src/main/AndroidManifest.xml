<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uhylabr.yourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.uhylabr.yourguide.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.uhylabr.yourguide.MainActivity"
            android:label="Your Guide"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name="com.example.uhylabr.yourguide.ParksActivity"
            android:label="Parks"
            android:parentActivityName="com.example.uhylabr.yourguide.MainActivity" />

        <activity
            android:name="com.example.uhylabr.yourguide.TouristsActivity"
            android:label="Tourist"
            android:parentActivityName="com.example.uhylabr.yourguide.MainActivity" />

    </application>

</manifest>